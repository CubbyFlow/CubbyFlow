<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">
  
    <sensor type="perspective" name="mainCam">
        <float name="focusDistance" value="10000"/>
        <float name="fov" value="60"/>
        <transform name="toWorld">
            <lookat target="0 0 0" origin="0 3 10" up="0 1 0"/>
        </transform>
    </sensor>

  <light type="point" name="point_lights">
    <source pos="3 3 10" color="1 1 1"/>
    <source pos="-3 3 10" color="1 1 1"/>
    <source pos="-3 -3 10" color="1 1 1"/>
    <source pos="3 -3 10" color="1 1 1"/>
  </light>

  <texture type="hdr" name="cubeMap" filename="ice_lake.hdr"/>
  <texture type="hdr" name="irradianceMap" filename="ice_lake_convolution.hdr"/>

  <program name="refractionShader">
    <shader>
      <vs value="vertex.glsl"/>
      <fs value="refraction.glsl"/>
    </shader>
    <uniform>
    </uniform>
  </program>

  <program name="meshShader">
    <shader>
      <vs value="vertex.glsl"/>
      <fs value="mesh.glsl"/>
    </shader>
    <uniform>
    </uniform>
  </program>

  <program name="pointSpriteShader">
    <shader>
      <vs value="point_input.glsl"/>
      <fs value="point_sprite.glsl"/>
    </shader>
    <uniform>
    </uniform>
  </program>

  <material type="envmapping" name="watermat">
    <program value="refractionShader"/>
    <refraction value="1.33"/>
  </material>

  <material type="brdf" name="particlemat">
    <program value="pointSpriteShader"/>
    <brdf type="dielectric">
      <albedo value="0.1 0.4 1.0"/>
      <metallic value="0.3"/>
      <roughness value="0.0"/>
      <ao value="1.0"/>
    </brdf>
  </material>

  <material type="brdf" name="obstaclemat">
    <program value="meshShader"/>
    <brdf type="dielectric">
      <albedo value="0.5 0.223 1.0"/>
      <metallic value="0.5"/>
      <roughness value="0.0"/>
      <ao value="0.5"/>
    </brdf>
  </material>

  <anim type="mesh" name="fluidAnim">
    <string name="format" value="levelset_bunny_high_viscosity/frame_%06d.obj"/>
    <integer name="count" value="144"/>
    <transform name="toWorld">
      <translate value="0 0 0"/>
      <rotate axis="1 0 0" degree="0"/>
      <scale value="2 2 2"/>
    </transform>
    <material value="watermat"/>
  </anim>


  <shape type="obj" name="cylinder">
    <string name="filename" value="sphere.obj"/>
    <transform name="toWorld">
      <translate value="0 1.5 0"/>
      <rotate axis="1 0 0" degree="0"/>
      <scale value="0.3 0.3 0.3"/>
    </transform>
    <material value="obstaclemat"/>
  </shape>

</scene>
<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">
    <sensor type="perspective" name="mainCam">
        <float name="focusDistance" value="10000"/>
        <float name="fov" value="60"/>
        <transform name="toWorld">
            <lookat target="0 0 0" origin="0 3 10" up="0 1 0"/>
        </transform>

        <film type="ldrfilm">
            <boolean name="banner" value="false"/>
            <float name="exposure" value="0"/>
            <float name="gamma" value="-1"/>
            <integer name="height" value="800"/>
            <string name="pixelFormat" value="rgb"/>
            <string name="toneMappingMethod" value="gamma"/>
            <string name="tonemapMethod" value="gamma"/>
            <integer name="width" value="1024"/>

            <rfilter type="catmullrom"/>
        </film>
    </sensor>

  <texture type="hdr" name="cubeMap" filename="ice_lake.hdr"/>
  <texture type="hdr" name="irradianceMap" filename="ice_lake_convolution.hdr"/>

  <program type="shader" name="refractionShader">
    <shader>
      <vs value="vertex.glsl"/>
      <fs value="refraction.glsl"/>
    </shader>
    <uniform>
    </uniform>
  </program>

  <program type="shader" name="meshShader">
    <shader>
      <vs value="vertex.glsl"/>
      <fs value="mesh.glsl"/>
    </shader>
    <uniform>
    </uniform>
  </program>

  <material type="envmapping" id="refraction" name="watermat">
    <program value="refractionShader"/>
    <refraction value="1.33"/>
  </material>

  <material type="brdf" id="diffmat" name="obstaclemat">
    <program value="meshShader"/>
    <brdf type="dielectric">
      <albedo value="0.0 0.223 1.0"/>
      <metallic value="0.5"/>
      <roughness value="0.0"/>
      <ao value="1.0"/>
    </brdf>
  </material>

  <anim type="obj" id="water" name="fluidAnim">
    <string name="format" value="levelset_bunny_high_viscosity/frame_%06d.obj"/>
    <integer name="count" value="180"/>
    <transform name="toWorld">
      <translate value="0 0 0"/>
      <rotate axis="1 0 0" degree="0"/>
      <scale value="1 1 1"/>
    </transform>
    <material type="envmapping" value="watermat"/>
  </anim>

  <shape type="obj" id="column1" name="cylinder1">
    <string name="filename" value="sphere.obj"/>
    <transform name="toWorld">
      <translate value="0 0 0"/>
      <rotate axis="1 0 0" degree="0"/>
      <scale value="0.3 0.3 0.3"/>
    </transform>
    <material type="brdf" value="obstaclemat"/>
  </shape>

  <shape type="obj" id="column1" name="cylinder2">
    <string name="filename" value="sphere.obj"/>
    <transform name="toWorld">
      <translate value="0 1 0"/>
      <rotate axis="1 0 0" degree="0"/>
      <scale value="0.3 0.3 0.3"/>
    </transform>
    <material type="brdf" value="obstaclemat"/>
  </shape>

  <shape type="obj" id="column1" name="cylinder3">
    <string name="filename" value="sphere.obj"/>
    <transform name="toWorld">
      <translate value="1 0 0"/>
      <rotate axis="1 0 0" degree="0"/>
      <scale value="0.3 0.3 0.3"/>
    </transform>
    <material type="brdf" value="obstaclemat"/>
  </shape>
</scene>
	
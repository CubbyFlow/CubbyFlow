<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">
    <sensor type="perspective" name="mainCam">
        <float name="focusDistance" value="10000"/>
        <float name="fov" value="30"/>
        <transform name="toWorld">
            <lookat target="0 0 0" origin="0 0 10" up="0 1 0"/>
        </transform>

        <film type="ldrfilm">
            <boolean name="banner" value="false"/>
            <float name="exposure" value="0"/>
            <float name="gamma" value="-1"/>
            <integer name="height" value="800"/>
            <string name="pixelFormat" value="rgb"/>
            <string name="toneMappingMethod" value="gamma"/>
            <string name="tonemapMethod" value="gamma"/>
            <integer name="width" value="1024"/>

            <rfilter type="catmullrom"/>
        </film>
    </sensor>

    <program type="shader" name="meshShader">
      <shader>
        <vs value="vertex.glsl"/>
        <fs value="mesh.glsl"/>
      </shader>
      <uniform>
      </uniform>
    </program>

    <emitter type="envmap" id="envmapLight" name="envmap">
        <string name="filename" value="hdr/sunset.hdr"/>
        <transform name="toWorld">
            <rotate y="1" angle="75"/>
        </transform>
        <float name="scale" value="2.75"/>
    </emitter>

    <material type="diffuse" id="diffmat" name="watermat">
        <program value="meshShader"/>
        <brdf type="dielectric">
            <albedo value="0.0 0.223 1.0"/>
            <metallic value="0.5"/>
            <roughness value="0.0"/>
            <ao value="0.0"/>
        </brdf>
    </material>

    <anim type="obj" id="water" name="fluidAnim">
        <string name="format" value="LevelSetLiquidSim_output/frame_%06d.obj"/>
        <integer name="count" value="200"/>
        <transform name="toWorld">
            <translate value="0 0 0"/>
            <rotate axis="1 0 0" degree="0"/>
            <scale value="1 1 1"/>
        </transform>
        <material type="brdf" value="watermat"/>
    </anim>

    <shape type="obj" id="column1">
        <string name="filename" value="objects/cylinder.obj"/>
        <transform name="toWorld">
            <rotate x="1" angle="90"/>
            <translate x="100" y="10" z="37.5"/>
            <scale x="0.01" y="0.075" z="0.01"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.35 0.0 0.0"/>
        </bsdf>
    </shape>
</scene>
